root = true

[*]
charset = utf-8

[*.php]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[{composer.json,composer.lock}]
indent_style = space
indent_size = 4

[*.xlf]
indent_style = space
indent_size = 2

[{*.yml,*.yaml}]
indent_style = space
indent_size = 4